# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'RealmFirebaseSample' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for RealmFirebaseSample
  # ローカルに保存用
  pod 'RealmSwift'
  # Firebase本体
  pod 'Firebase/Core'
  # FirebaseのうちRealtimeDatabaseを使う時
  pod 'Firebase/Database'
  # FirebaseのうちStorageを使う時
  pod 'Firebase/Storage'
  # FirebaseのうちAuthを使う時
  pod 'Firebase/Auth'

  # ネットにある画像を取ってくるときはこういうものを入れておくといい
  pod 'Kingfisher'

end
